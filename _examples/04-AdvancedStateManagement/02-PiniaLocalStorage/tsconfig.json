{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "target": "esnext",
    "noUncheckedIndexedAccess": true
  },
  "extends": "../../../tsconfig.json",
  "include": [
    "./src/types/env.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "./package.json",
    "./tests/unit/**/*"
  ],
  "exclude": [
    "./src/api"
  ]
}