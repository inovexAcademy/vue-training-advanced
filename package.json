{
  "name": "vue-training",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engineStrict": true,
  "engines": {
    "node": "23"
  },
  "workspaces": [
    "_examples/*",
    "_exercises/*",
    "_solutions/*"
  ],
  "scripts": {
    "test-all": "pnpm -r exec vitest run --passWithNoTests",
    "build-all": "pnpm -r exec vite build",
    "prepare": "simple-git-hooks -ws -if-present",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm exec playwright install",
    "start:welcome": "cd _examples/Welcome && pnpm run dev",
    "start:1": "cd _exercises/01-Advanced-Reactivity && pnpm run dev",
    "start:2": "cd _exercises/02-Advanced-Routing && pnpm run dev",
    "start:3": "cd _exercises/03-E2E-Testing && pnpm run test:e2e:ui",
    "start:4": "cd _exercises/04-Advanced-Pinia-LocalStorage && pnpm run dev",
    "start:5": "cd _exercises/05-ClientApiMocking && pnpm run dev",
    "start:6": "cd _exercises/06-Prove-Yourself && pnpm run dev",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@fontsource-variable/source-code-pro": "^5.2.5",
    "@fontsource-variable/source-sans-3": "^5.2.7",
    "@sit-onyx/icons": "1.0.0-beta.23",
    "@vueuse/core": "^13.7.0",
    "oidc-client-ts": "^3.2.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "sit-onyx": "1.0.0-beta.285",
    "vue": "^3.5.20",
    "vue-component-type-helpers": "^3.0.6",
    "vue-i18n": "^11.1.3"
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@import-meta-env/cli": "~0.7.3",
    "@import-meta-env/typescript": "~0.4.0",
    "@import-meta-env/unplugin": "~0.6.2",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@pinia/testing": "^1.0.1",
    "@playwright/experimental-ct-vue": "~1.52.0",
    "@playwright/test": "~1.52.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.1.3",
    "@vue/compiler-dom": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "@yao-pkg/pkg": "^6.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.3.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "sass-embedded": "^1.88.0",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5",
    "vite-plugin-run": "~0.6.1",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.1.3",
    "vitest-mock-extended": "^3.1.0",
    "vitest-sonar-reporter": "^2.0.1",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10",
    "@hey-api/openapi-ts": "^0.81.1",
    "msw": "^2.10.5",
    "z-vue-scan": "^0.0.35"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "prettier --write -u",
      "eslint --fix"
    ]
  }
}
